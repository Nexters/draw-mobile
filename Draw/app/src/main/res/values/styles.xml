<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyBottomAppBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="backgroundTint">@color/white</item>
        <item name="android:topRightRadius">20dp</item>
        <item name="android:topLeftRadius">20dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="shapeCornerFamily">rounded</item>
        <item name="shapeAppearanceOverlay">@style/MyBottomAppBarShapeAppearanceOverlay</item>
    </style>

    <style name="MyBottomAppBarShapeAppearanceOverlay" parent="ShapeAppearanceOverlay.Material3.Corner.Bottom">
        <item name="cornerRadius">50dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item> <!-- 원하는 상단 둥글기 크기로 조정 -->
        <item name="cornerSizeTopRight">20dp</item> <!-- 원하는 상단 둥글기 크기로 조정 -->
    </style>



</resources>
