<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_draw"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_draw_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Draw"
        tools:targetApi="31">
        <activity
            android:name=".NewQuestionActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:parentActivityName=".OnBoardingActivity"
            android:exported="true" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".OnBoardingActivity"/>
        </activity>
        <activity
            android:name=".OnBoardingActivity"
            android:exported="true"
            android:theme="@style/Theme.Draw"
            android:windowSoftInputMode="adjustUnspecified">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".DrawFirebaseMessagingService"
            android:enabled="true"
            android:exported="true"
            android:stopWithTask="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>


    </application>

</manifest>
